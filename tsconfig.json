{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "pretty": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "newLine": "lf"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests"
    ]
}