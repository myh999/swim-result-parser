{
    "globals": {
        "ts-jest": {
            "tsconfig": "./tsconfig.json",
            "diagnostics": false
        }
    },
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "./tests/.*\\.test.(ts|tsx|js)$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/server.ts"
    ],
    "testEnvironment": "node"
}